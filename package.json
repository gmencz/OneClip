{
  "private": true,
  "name": "remix-app-template",
  "scripts": {
    "build:remix": "remix build",
    "dev:remix": "remix dev",
    "build:server": "tsc",
    "dev:server": "NODE_ENV=development ts-node --transpile-only server/index.ts",
    "build:css": "tailwindcss -i ./styles/app.css -o ./app/styles/app.css --config ./tailwind.config.js --minify",
    "dev:css": "tailwindcss -i ./styles/app.css -o ./app/styles/app.css --config ./tailwind.config.js --watch"
  },
  "dependencies": {
    "@remix-run/express": "^0.17.5",
    "@remix-run/node": "^0.17.5",
    "@remix-run/react": "^0.17.5",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.0.0-beta.0",
    "remix": "^0.17.5"
  },
  "devDependencies": {
    "@remix-run/dev": "^0.17.5",
    "@types/compression": "^1.7.1",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/react": "^17.0.17",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "eslint": "^7.32.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.9.0",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "prettier": "^2.3.2",
    "tailwindcss": "^2.2.7",
    "ts-node": "^10.2.0",
    "typescript": "^4.3.5"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "eslintConfig": {
    "extends": "react-app"
  },
  "prettier": {
    "arrowParens": "avoid",
    "trailingComma": "none"
  }
}
